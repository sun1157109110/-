/* pages/recommendSong/index.wxss */
.header image{
    width: 100%;
    height: 100%;
}
.header{
    position: relative;
    width: 100%;
    height: 300rpx;
}
.header .timerContainer{
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
    color: #fff;
}
.day{
    font-size: 38rpx;
}

/* 内容区 */
.listContainer{
    position: relative;
    padding: 0 20rpx;
    top: -20rpx;
    border-radius: 30rpx;
    background-color: #fff;
}
.listContainer .listHeader{
    height: 80rpx;
    line-height: 80rpx;
}
.listHeader .changeMore{
    float: right;
}
.recommendScroll{
    height: calc(100vh - 380rpx);
}
.recommendScroll .scrollItem{
    display: flex;
    position: relative;
    margin-bottom: 20rpx;
}
.recommendScroll .scrollItem image{
    width: 80rpx;
    height: 80rpx;
}
.musicInfo{
    display: flex;
    flex-direction: column;
    margin-left: 20rpx;
    
}
.musicInfo text{
    height: 40rpx;
    line-height: 40rpx;
    font-size: 24rpx;
    max-width: 500rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}
.scrollItem .iconfont{
    position: absolute;
    width: 80rpx;
    height: 80rpx;
    line-height: 80rpx;
    text-align: right;
    right: 0;
}