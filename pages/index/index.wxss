/* pages/index/index.wxss */
.banner {
  width: 100%;
  height: 300rpx;
}

.banner image {
  width: 100%;
  height: 100%;
}

.navContainer {
  display: flex;
}

.navItem {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 20%;
}

.iconfont {
  width: 100rpx;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 50rpx;
  border-radius: 50%;
  background-color: rgb(240, 19, 19);
  color: #fff;
  text-align: center;
  margin: 20rpx 0;
}

.navItem text:nth-child(2) {
  font-size: 26rpx;
}
.recommendContainer{
  padding: 20rpx;
}

.scrollItem{
  width: 200rpx;
  margin-right: 20rpx;
}
.scrollItem image{
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
}
.recommendScroll{
  display: flex;
  height: 300rpx;
}
.recommendScroll text{
  font-size: 24rpx;
  overflow: hidden;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
/* 排行榜 */
.toplist{
  padding: 20rpx;
}
.toplistSwiper{
  height: 400rpx;
}
.swiperItem{
  width: 96%;
  background-color: #fbfbfb;
}
.swiperItem .listtitle{
    font-size: 30rpx;
    line-height: 80rpx;
}
.musicItem{
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}
.musicItem image{
  width: 100rpx;
  height: 100rpx;
  text-align: center;
  border-radius: 6rpx;
}
.musicItem .listnumber{
  width: 100rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
}
.musicItem .songname{
  max-width: 400rpx;
  height: 100rpx;
  line-height: 100rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}